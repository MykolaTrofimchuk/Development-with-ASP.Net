@model IEnumerable<Job>

<h2 class="mb-3">Вакансії</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Додати вакансію</a>

<table class="table table-striped table-bordered">
    <thead class="table-primary">
        <tr>
            <th>Назва</th>
            <th>Компанія</th>
            <th>Дата публікації</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.Company</td>
                <td>@job.DatePosted.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-info btn-sm">Деталі</a>
                    <a asp-action="Edit" asp-route-id="@job.Id" class="btn btn-warning btn-sm">Редагувати</a>
                    <a asp-action="Delete" asp-route-id="@job.Id" class="btn btn-danger btn-sm">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
