@model JobPortal.Models.Application

@{
    ViewData["Title"] = "Деталі заявки";
}

<h1>Деталі заявки</h1>

<div>
    <h4>Заявка</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ім’я заявника
        </dt>
        <dd class="col-sm-10">
            @Model.FullName
        </dd>

        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>

        <dt class="col-sm-2">
            Назва вакансії
        </dt>
        <dd class="col-sm-10">
            @Model.Job?.Title
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редагувати</a> |
    <a asp-action="Index" class="btn btn-secondary">Повернутись до списку</a>
</div>
